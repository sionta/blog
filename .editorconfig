# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
charset = utf-8
end_of_line = unset
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
insert_final_newline = true
trim_trailing_whitespace = false
indent_size = 4

[*.sh]
end_of_line = lf

[*.ps1]
indent_size = 4
end_of_line = crlf
