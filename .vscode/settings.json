{
  "search.exclude": {
    "**/assets": true,
    "**/_site": true,
    "**/*.map": true,
    "**/test*": true
  },

  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,

  "files.associations": {
    "*.html": "liquid",
    "*.svg": "svg",
    "**/js/test.js": "liquid-javascript"
  },

  "[liquid]": {
    "editor.defaultFormatter": "Shopify.theme-check-vscode"
  },
  "[svg]": {
    "editor.defaultFormatter": "jock.svg"
  }
}
